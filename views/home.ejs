<html>
    <head>
        <title>
            <%=title%> 
        </title>
        <script src="https://kit.fontawesome.com/c5c0c2ae0d.js" crossorigin="anonymous"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
        <script src="https://www.google.com/jsapi"></script>
        <link rel="stylesheet" href="/css/home.css">
    </head>
    <body>
        <nav class="nav-bar">
            <h1>ToDo App</h1>
        </nav>
        <div>
            <a class="trigger_popup_fricc"><i class="fas fa-plus"></i>Add New</a>
            <div class="hover_bkgr_fricc">
                <span class="helper"></span>
                <div>
                    <div class="popupCloseButton">&times;</div>
                    <form action="/add-item" method="POST" class="add-contact-form">
                        <fieldset>
                            <legend>add new to -do</legend>
                            <input type="text" name="label" placeholder="Enter Name..." required>
                            <input type="date"  name="dueDate" placeholder="enter date..." required>
                            <select name="category">
                                <option value="none">Select</option>
                                <option value="personal">personal</option>
                                <option value="office">office</option>
                            </select>
                            <select name="priority">
                                <option value="6">default</option>
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>
                            </select>
                            <button type="submit">
                                ADD
                            </button>
                        </fieldset>
                    </form>
                </div>
            </div>
            
        </div>
        <div>
            <form action="/delete_task" method="POST">
                <% for(let i of to_do_list) {%>
                    <label class="check-box-round">
                    <input type="checkbox" name="taskDone" value="<%= i.id %>" >
                        label : <%= i.label %>
                        category : <%= i.category %>
                        dueDate : <%= i.dueDate %>
                    </label>    
                <% } %> 
                    <button type="submit">submit</button>
            </form>

        </div>
        <script type="text/javascript" src="/js/home.js">
        </script>
    </body>
</html>